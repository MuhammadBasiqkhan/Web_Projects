<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> 
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/stylesheets/profile.css">
   <title>Profile Page</title>
</head>
<body>

    <header>
        <nav >
          <div class="left side">
            <div class="element">
             <img src="/images/R.png" alt="" srcset="">
             
            </div>
            
            <p class="parag">Printrest</p>
           
          </div>
          <div class="middle side">
            <div class="search">
              <i class="fa-solid fa-magnifying-glass"></i>
            </div>
            <input type="text" name="" id="" placeholder="Search">
          </div>
          <div class="right side">
              <button class="btnupload">Upload Post</button>
            <a href="/feed">Feed</a>
            <a href="/profile?msg=profile">Profile</a>
            <img id="profileiamge" src="./images/uploads/<%= userdetails.dp %>" alt="" srcset="">


            <div class="displayUserdata">
                <div class="displayprofile">
                  <a class="profilepager" href="/profile?msg=profile">
                    <img src="./images/uploads/<%= userdetails.dp %>" alt="" srcset="">
                  </a>
                </div>
      
                <p>@<%= userdetails.username %>
                </p>
                <p>
                  <%= userdetails.email %>
                </p>
                <div class="Acount">
                  <a class="Ancher" href="/">Add Acount</a>
                </div>
                <div class="logout">
                  <a class="Ancher" href="/login">Logout</a>
                </div>
              </div>
          </div>
        </nav>
      </header>

    <div class="maindisplay">
        <div class="containerupload">
            
            <div class="cross">
                <div class="cancel">
                    <i class="fa-solid fa-xmark"></i>
                </div>
            </div>
            <form action="/upload" method="post" enctype="multipart/form-data">
                <input type="text" name="postCaption" placeholder="Post Caption">
                <input type="file" name="file" >
                <button type="submit">Upload </button>
            </form>
        </div>
    </div>
    <div class="containered">
        <div class="profile">
            <div class="pic">
                <form hidden id="imagedata" action="/fileupload" method="post" enctype="multipart/form-data">
                    <input  type="file" name="imagefile" >
                </form>
                <div class="img"><img src="./images/uploads/<%= userdetails.dp %>"/></div>
                <div class="containedelement">
                    <i class="fa-regular fa-pen-to-square"></i>

                </div>
               
            </div>
            <h4><%= userdetails.fullname %></h4>
            <p>@<%= userdetails.username %></p>
           <a href="/edit" class="edit">Edit</a>
           
           
            
        </div>
    </div>

    <div class="displayportion">
        <div class="leftbox">
          
            <p>Your Posts</p>
        </div>
        <div class="rightbox">
            <p>Saved Posts</p>
        </div>
    </div>

    <div class="container">
        <div class="cards">
            <% if(userdetails.posts.length <= 0){ %>
                <div class="cardemaindisplay">
                    <h4>Nothing to show...yet! Post you create will live here.</h4>
                </div>
            <% } %>
            <% userdetails.posts.forEach(post => { %>
                <div class="card" style="width: 12rem;">
                    <img src="./images/uploads/<%= post.postImage %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.postText %></h5>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="cards2">
            <% if(userdetails.Savedposts.length <= 0){ %>
                <div class="cardemaindisplay">
                    <h4>You haven't saved any Post yet</h4>
                </div>
                    <% } %>
            <% userdetails.Savedposts.forEach(post => { %>
            <div class="card" style="width: 12rem;">
                <img src="<%= post.postImage %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h6 class="card-title"><%= post.postText %></h6>
                    <p ><%= post.username %></p>
                  
                </div>
            </div>
            <% }) %>
        </div>


    </div>

    <% if(message==="messagesent") { %>
    <div class="alert">
        <div class="tickmark2">
          <i class="fa-solid fa-check"></i>
        </div>
        <p>You Registered Successfully please check you inbox for Verification Email</p>
        <div class="tickmark">
            <i class="fa-solid fa-xmark"></i>
          </div>

    <% } %>
    <% if(message!="messagesent") { %>
    <div class="alert" style="display: none;">
        <div class="tickmark2">
          <i class="fa-solid fa-check"></i>
        </div>
        <p><%=message%></p>
        <div class="tickmark">
            <i class="fa-solid fa-xmark"></i>
          </div>

    <% } %>
    </div> 


        


    
    
    <script src="/javascripts/profile.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>





